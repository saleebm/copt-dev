{
  "name": "copt-dev",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Mina Saleeb",
    "email": "saleebmina@copt.dev"
  },
  "scripts": {
    "build": "NODE_ENV=production next build",
    "dev": "next dev -p ${PORT:=3000}",
    "format": "prettier --write . && npm run format:styles",
    "format:styles": "stylelint --fix \"styles/**/*.scss\" \"components/**/*.scss\" \"layouts/**/*.scss\"",
    "generate-sitemap": "node scripts/sitemap-generator.mjs",
    "generate:prisma": "prisma generate",
    "lint": "next lint",
    "lint:styles": "stylelint \"styles/**/*.scss\" \"components/**/*.scss\" \"layouts/**/*.scss\"",
    "migrate": "prisma migrate dev",
    "migrate:prod": "prisma migrate deploy",
    "prepare": "husky install",
    "production": "npm run build && npm run start",
    "start": "NODE_OPTIONS='--max-old-space-size=4096' NODE_ENV=production next start -p ${PORT:=3000}",
    "type-check": "tsc --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@prisma/client": "3.9.1",
    "@tailwindcss/aspect-ratio": "0.4.0",
    "@tailwindcss/typography": "0.5.1",
    "contentlayer": "^0.0.34",
    "figlet": "^1.5.2",
    "framer-motion": "6.2.3",
    "next": "^12.0.11-canary.7",
    "next-compose-plugins": "^2.2.1",
    "next-contentlayer": "^0.0.34",
    "next-seo": "5.1.0",
    "next-themes": "^0.0.15",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "sharp": "0.30.0",
    "tailwindcss": "3.0.18"
  },
  "devDependencies": {
    "@babel/cli": "7.17.0",
    "@babel/core": "7.17.0",
    "@commitlint/cli": "16.1.0",
    "@commitlint/config-conventional": "16.0.0",
    "@sergeymyssak/nextjs-sitemap": "^2.0.3",
    "@types/figlet": "^1.5.4",
    "@types/node": "17.0.14",
    "@types/react": "17.0.38",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.10.2",
    "autoprefixer": "10.4.2",
    "commitizen": "^4.2.4",
    "critters": "0.0.16",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "8.8.0",
    "eslint-config-next": "^12.0.11-canary.7",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.2",
    "next-transpile-modules": "^9.0.0",
    "postcss": "8.4.6",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.4.1",
    "prisma": "3.9.1",
    "sass": "1.49.7",
    "stylelint": "14.3.0",
    "stylelint-config-recommended-scss": "^5.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "4.1.0",
    "typescript": "4.5.5"
  }
}
