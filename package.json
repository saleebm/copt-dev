{
  "name": "copt-dev",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Mina Saleeb",
    "email": "saleebmina@copt.dev"
  },
  "scripts": {
    "build": "NODE_ENV=production next build",
    "dev": "next dev -p ${PORT:=3000}",
    "format": "prettier --write .",
    "format:styles": "stylelint --fix \"styles/**/*.scss\" \"components/**/*.scss\" \"layouts/**/*.scss\"",
    "generate-sitemap": "node scripts/sitemap-generator.mjs",
    "generate:prisma": "prisma generate",
    "lint": "next lint",
    "lint:styles": "stylelint \"styles/**/*.scss\" \"components/**/*.scss\" \"layouts/**/*.scss\"",
    "migrate": "prisma migrate dev",
    "migrate:prod": "prisma migrate deploy",
    "prepare": "husky install",
    "production": "npm run build && npm run start",
    "start": "NODE_OPTIONS='--max-old-space-size=4096' NODE_ENV=production next start -p ${PORT:=3000}",
    "type-check": "tsc --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@prisma/client": "^3.4.1",
    "@tailwindcss/aspect-ratio": "^0.3.0",
    "@tailwindcss/typography": "^0.4.1",
    "figlet": "^1.5.2",
    "framer-motion": "^5.2.1",
    "next": "12.0.7",
    "next-seo": "4.28.1",
    "next-themes": "^0.0.15",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "sharp": "^0.29.3",
    "tailwindcss": "^2.2.19"
  },
  "devDependencies": {
    "@babel/cli": "7.16.0",
    "@babel/core": "7.16.0",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@sergeymyssak/nextjs-sitemap": "^2.0.3",
    "@types/figlet": "^1.5.4",
    "@types/node": "^16.9.6",
    "@types/react": "17.0.24",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "autoprefixer": "^10.3.5",
    "commitizen": "^4.2.4",
    "critters": "^0.0.10",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "7.32.0",
    "eslint-config-next": "12.0.7",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.2",
    "next-transpile-modules": "^9.0.0",
    "postcss": "^8.3.7",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.4.1",
    "prisma": "^3.4.1",
    "sass": "^1.43.4",
    "stylelint": "^14.0.1",
    "stylelint-config-recommended-scss": "^5.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.0.0",
    "typescript": "4.3.5"
  }
}
