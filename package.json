{
  "name": "copt-dev",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Mina Saleeb",
    "email": "saleebmina@copt.dev"
  },
  "scripts": {
    "build": "NODE_ENV=production next build",
    "dev": "next dev -p ${PORT:=3000}",
    "format": "prettier --write . && npm run format:styles",
    "format:styles": "stylelint --fix \"styles/**/*.scss\" \"components/**/*.scss\" \"layouts/**/*.scss\"",
    "generate-sitemap": "node scripts/sitemap-generator.mjs",
    "generate:prisma": "prisma generate",
    "lint": "next lint",
    "lint:styles": "stylelint \"styles/**/*.scss\" \"components/**/*.scss\" \"layouts/**/*.scss\"",
    "migrate": "prisma migrate dev",
    "migrate:prod": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset",
    "prepare": "husky install",
    "production": "npm run build && npm run start",
    "start": "NODE_OPTIONS='--max-old-space-size=4096' NODE_ENV=production next start -p ${PORT:=3000}",
    "type-check": "tsc --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@prisma/client": "4.8.1",
    "@tailwindcss/aspect-ratio": "0.4.2",
    "@tailwindcss/typography": "0.5.9",
    "cookie": "^0.5.0",
    "figlet": "^1.5.2",
    "framer-motion": "8.4.3",
    "next": "13.1.2",
    "next-seo": "5.15.0",
    "next-themes": "^0.2.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sharp": "0.31.3",
    "tailwindcss": "3.2.4"
  },
  "devDependencies": {
    "@babel/cli": "7.20.7",
    "@babel/core": "7.20.12",
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@sergeymyssak/nextjs-sitemap": "^2.0.3",
    "@types/figlet": "^1.5.5",
    "@types/node": "18.11.18",
    "@types/cookie": "^0.5.1",
    "@types/spotify-api": "^0.0.19",
    "@types/react": "18.0.26",
    "@typescript-eslint/eslint-plugin": "5.48.1",
    "@typescript-eslint/parser": "5.48.1",
    "autoprefixer": "10.4.13",
    "commitizen": "^4.2.6",
    "critters": "0.0.16",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.32.0",
    "eslint-config-next": "13.1.2",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "postcss": "8.4.21",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "7.8.3",
    "prettier": "^2.8.3",
    "prisma": "4.8.1",
    "sass": "1.57.1",
    "stylelint": "14.16.1",
    "stylelint-config-recommended-scss": "8.0.0",
    "stylelint-order": "^6.0.1",
    "stylelint-scss": "4.3.0",
    "typescript": "4.9.4"
  }
}
