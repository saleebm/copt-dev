{
  "name": "copt-dev",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Mina Saleeb",
    "email": "saleebmina@copt.dev"
  },
  "scripts": {
    "build": "NODE_ENV=production next build",
    "dev": "next dev -p ${PORT:=3000}",
    "format": "prettier --write . && npm run format:styles",
    "format:styles": "stylelint --fix \"styles/**/*.scss\" \"components/**/*.scss\" \"layouts/**/*.scss\"",
    "generate-sitemap": "node scripts/sitemap-generator.mjs",
    "generate:prisma": "prisma generate",
    "lint": "next lint",
    "lint:styles": "stylelint \"styles/**/*.scss\" \"components/**/*.scss\" \"layouts/**/*.scss\"",
    "migrate": "prisma migrate dev",
    "migrate:prod": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset",
    "prepare": "husky install",
    "production": "npm run build && npm run start",
    "seed": "node scripts/seed.mjs",
    "start": "NODE_OPTIONS='--max-old-space-size=4096' NODE_ENV=production next start -p ${PORT:=3000}",
    "validate-mood": "node scripts/validate-mood.mjs",
    "type-check": "tsc --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@prisma/client": "4.15.0",
    "@tailwindcss/aspect-ratio": "0.4.2",
    "@tailwindcss/typography": "0.5.9",
    "cookie": "^0.5.0",
    "figlet": "^1.6.0",
    "framer-motion": "10.12.16",
    "next": "13.4.6",
    "next-seo": "6.0.0",
    "next-themes": "^0.2.1",
    "node-fetch": "^3.3.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-h5-audio-player": "^3.8.6",
    "sharp": "0.32.1",
    "swr": "^2.1.5",
    "tailwindcss": "3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "7.22.5",
    "@babel/core": "7.22.5",
    "@commitlint/cli": "17.6.5",
    "@commitlint/config-conventional": "17.6.5",
    "@sergeymyssak/nextjs-sitemap": "^2.0.3",
    "@types/cookie": "^0.5.1",
    "@types/figlet": "^1.5.6",
    "@types/node": "20.3.1",
    "@types/react": "18.2.13",
    "@types/spotify-api": "^0.0.22",
    "@typescript-eslint/eslint-plugin": "5.60.0",
    "@typescript-eslint/parser": "5.60.0",
    "autoprefixer": "10.4.14",
    "commitizen": "^4.3.0",
    "critters": "0.0.19",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.3.1",
    "eslint": "8.43.0",
    "eslint-config-next": "13.4.6",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "postcss": "8.4.24",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "8.5.0",
    "prettier": "^2.8.8",
    "prisma": "4.15.0",
    "sass": "1.63.4",
    "stylelint": "15.8.0",
    "stylelint-config-recommended-scss": "12.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "5.0.1",
    "typescript": "5.1.3"
  }
}
